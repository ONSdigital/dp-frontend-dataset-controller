{{ range . }}
    <div class="ons-panel ons-panel--info ons-panel--no-title{{ if .CssClasses}}{{ range .CssClasses }} {{ . }}{{ end }}{{ end }}">
        {{ if .DisplayIcon }}
            <div class="ons-panel--warn ons-u-bg--tr">
                <div class="ons-panel__icon" aria-hidden="true">
                    !
                </div>
            {{ end }}
            <span class="ons-panel__assistive-text ons-u-vh">
                {{- localise "ImportantInformation" .Language 1 -}}
            </span>
            <div class="ons-panel__body">
                <div class="ons-u-fs-r default-line-height">
                    {{- .Body | safeHTML -}}
                </div>
            </div>
            {{ if .DisplayIcon }}
            </div>
        {{ end }}
    </div>
{{ end }}
